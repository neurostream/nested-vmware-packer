{
  "variables": {
    "version": "{{env `version`}}",
    "isobasename": "{{env `isobasename`}}"
  },
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "sudo {{.Vars}} sh {{.Path}}",
      "scripts": [
        "scripts/openvswitch.sh"
      ]
    },
    {
      "type": "file",
      "direction": "download",
      "source": "outputArtifacts/rpm/",
      "only": ["vmware-vmx"],
      "destination": "rpm"
    }
  ],
  "builders": [
    {
      "type": "vmware-vmx",
      "source_path": "inputArtifacts/{{user `isobasename`}}.vmx",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "10m",
      "headless": "true",
      "vnc_bind_address": "0.0.0.0",
      "vnc_disable_password": true,
      "vnc_port_min": 5901,
      "vnc_port_max": 5901,
      "shutdown_command": "sudo /sbin/halt -p",
      "vmx_data": {
        "memsize": "2024",
        "numvcpus": "2",
        "vhv.enable": "TRUE"
      }
    }
  ]
}
